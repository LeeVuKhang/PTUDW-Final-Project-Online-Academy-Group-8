<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        Header
        <a class="btn btn-primary float-end" href="/admin/categories/add" role="button"> <i class="bi bi-file-earmark-plus-fill"></i> New
            Category</a>
    </div>
    <div class="card-body">
        <table class="table table-striped __web-inspector-hide-shortcut__">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Category</th>
                    <th scope="col" class="text-end">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <th scope="row">{{catid}}</th>
                    <td>{{catname}}</td>
                    <td class="text-end">
                        <a name="" id="" class="btn btn-sm btn-outline-primary" href="/admin/categories/edit?id={{catid}}" role="button"><i class="bi bi-pencil-fill"></i> Button</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div class="card-footer text-muted">Footer</div>
</div>