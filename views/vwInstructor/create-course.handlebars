<form action="" method="post">
    <div class="card">
        <h4 class="card-headed">Đăng ký khóa học mới</h4>
        <div class="card-body">

            <div class="mb-3">
                <label for="txtTitle" class="form-label">Tên khóa học</label>
                <input type="text" class="form-control" id="txtTitle" name="title" autofocus>
            </div>

            <div class="mb-3">
                <label for="txtShortDes" class="form-label">Mô tả ngắn gọn nội dung khoá học</label>
                <input type="text" class="form-control" id="txtShortDetail" name="shortdes" autofocus>
            </div>

            <div class="mb-3">
                <label for="txtLonogDes" class="form-label">Mô tả chi tiết nội dung khoá học</label>
                <input type="text" class="form-control" id="txtLongDetail" name="longdes" autofocus>
            </div>

            <div class="mb-3">
                <label for="txtPrice" class="form-label">Học phí & thông tin khuyến mại </label>
                <input type="text" class="form-control" id="txtPrice" name="price" autofocus>
            </div>

            <div class="mb-3">
                <label for="txtSyllabus" class="form-label">Đề cương khoá học, cho phép xem trước (preview) một số chương </label>
                <input type="text" class="form-control" id="txtSyllabus" name="syllabus" autofocus>
            </div>
        </div>
    </div>

    <div class="card-footer text-muted">
        <a name="" id="" class="btn btn-outline-success" href="/admin/categories" role="button">
            <i class="bi bi-arrow-left"></i>
            Back
        </a>

        <button type="summit" class="btn btn-success">
            <i class="bi bi-check2"></i>
            Save
        </button>
    </div>
</form>